// Delete all comments when deploying, as they are not allowed in JSON.
{
  "debug.console.historySuggestions": false,
  "dart.flutterHotReloadOnSave": "allIfDirty",
  "dart.flutterSdkPath": "~/.asdf/installs/flutter/3.16.5-stable",
  "dart.hotReloadOnSave": "allIfDirty",
  // https://dartcode.org/docs/recommended-settings/
  "debug.internalConsoleOptions": "openOnSessionStart",
  // https://dartcode.org/docs/recommended-settings/
  "debug.openDebug": "openOnDebugBreak",
  // https://github.com/microsoft/vscode/issues/172464 is resolved.
  // "debug.toolBarLocation": "commandCenter",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.find.globalFindClipboard": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": false
  },
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.hotExit": "off",
  "files.trimTrailingWhitespace": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.followTagsWhenSync": true,
  "git.pruneOnFetch": true,
  "git.rebaseWhenSync": true,
  // https://docs.github.com/en/copilot/configuring-github-copilot/configuring-github-copilot-in-your-environment?tool=vscode
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "html.format.preserveNewLines": false,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "js/ts.implicitProjectConfig.target": "ESNext",
  "search.globalFindClipboard": true,
  "search.quickOpen.includeHistory": false,
  "search.smartCase": true,
  "security.workspace.trust.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.completeFunctionCalls": true,
  "window.nativeTabs": true,
  "window.restoreWindows": "none",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.restoreViewState": false,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": true,
  "workbench.startupEditor": "none",
  // https://dartcode.org/docs/recommended-settings/
  "[dart]": {
    "editor.codeActionsOnSave": {
      "quickfix.insertSemicolon": true,
    },
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
  }
}